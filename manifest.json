{
    "manifest_version": 2,
    "name": "Weather Indicator",
    "description": "Quick update to current weather status",
    "version": "0.0.1",
    "icons": {
        "128": "icon_128.png"
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_security_policy": "script-src 'self' https://api.openweathermap.org/data/; object-src 'self'",
    "permissions": ["geolocation"]
}